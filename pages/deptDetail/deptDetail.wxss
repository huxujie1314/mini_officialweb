      text-indent: 60rpx;
      line-height: 150%; }

.sidebar {
  position: absolute;
  right: 0;
  top: 0; }
  .sidebar .van-sidebar {
    width: 360rpx; }
    .sidebar .van-sidebar .image_row {
      height: 120rpx;
      display: flex;
      justify-content: center;
      align-items: center; }
    .sidebar .van-sidebar image {
      width: 80%;
      height: 78rpx; }
    .sidebar .van-sidebar .van-sidebar-item--selected {
      border-color: #2d7ca3; }
    .sidebar .van-sidebar .van-sidebar-item__text {
      color: #2d7ca3;
      font-weight: 600; }
